// ===========================================
// DojoCountdown Prisma Schema
// ===========================================
// This is the Prisma schema file for DojoCountdown.
// It defines the database provider and all data models.

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===========================================
// Enums
// ===========================================

enum Role {
  USER
  ADMIN
}

enum Plan {
  FREE
  STARTER
  PRO
  ENTERPRISE
}

// ===========================================
// Phase 2: Authentication & User Foundation
// ===========================================

model User {
  id         String  @id @default(cuid())
  email      String  @unique
  password   String
  name       String?
  role       Role    @default(USER)
  plan       Plan    @default(FREE)
  isActive   Boolean @default(true)
  isVerified Boolean @default(false) // For future email verification

  // Relationships
  refreshTokens RefreshToken[]
  usageStats    UsageStats?
  // countdowns    Countdown[]  // Phase 3

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@map("users")
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userAgent String? // Track device/browser
  ipAddress String? // Track IP for security
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([token])
  @@index([userId])
  @@map("refresh_tokens")
}

model UsageStats {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Usage Metrics
  countdownsCreated Int @default(0)
  activeCountdowns  Int @default(0)
  monthlyViews      Int @default(0)
  totalViews        Int @default(0)

  // Billing Period (for monthly resets)
  currentPeriodStart DateTime @default(now())
  currentPeriodEnd   DateTime

  updatedAt DateTime @updatedAt

  @@map("usage_stats")
}

